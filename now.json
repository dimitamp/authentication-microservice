{
  "version": 2,
  "builds": [
    { "src": "src/index.js", "use": "@now/node" },
    { "src": "index.html", "use": "@now/static" },
    { "src": "docs/index.html", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/users/.*",
      "dest": "src/index.js"
    },
    {
      "src": "/docs",
      "dest": "docs/index.html"
    }
  ],
  "env": {
    "SERVER_SECRET": "@server-secret",
    "SERVER_PORT": "@server-port",
    "MONGO_DB_URI": "@mongodb-uri"
  }
}
