{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "20mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "SERVER_SECRET": "@server-secret",
    "SERVER_PORT": "@server-port",
    "MONGODB_URI": "@mongodb-uri"
  }
}
