{
  "name": "authentication-microservice",
  "version": "1.0.0",
  "description": "A microservice that provides authentication / authorization features.",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "SERVER_PORT=0 ava",
    "test:nyan": "SERVER_PORT=0 ava --tap | tap-nyan",
    "cover": "SERVER_PORT=0 nyc ava",
    "api-doc": "apidoc -i src/routes/ -o docs/",
    "lint": "./node_modules/.bin/eslint src"
  },
  "engines": {
    "node": "10.x"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "helmet": "^3.20.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.7.1",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.9.1",
    "path": "^0.12.7",
    "ramda": "^0.26.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^6.4.0",
    "ava": "^2.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-ava": "^7.1.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mongodb-memory-server": "^5.2.3",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2",
    "tap-nyan": "^1.1.0"
  },
  "apidoc": {
    "title": "Authentication Microservice",
    "url": "https://authentication-microservice.now.sh",
    "forceLanguage": "en"
  },
  "ava": {
    "files": [
      "__tests__/**/*.test.js"
    ],
    "verbose": true,
    "timeout": "10s"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/**/*.js": [
      "git add .",
      "npm run lint"
    ]
  }
}
